<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/grey">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_365sdp"
            android:background="@drawable/bg_login">


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_subscription_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Apple Tracking"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:id="@+id/cardViewLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_subscription_plan"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/drawbale_cardview_corner">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"


                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Profile Progress"
                    android:textColor="@color/blackH"
                    android:textSize="@dimen/_13sdp" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:src="@drawable/progress_bar_60" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="335dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/map" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_15sdp"

                    android:layout_marginEnd="@dimen/_20sdp">


                    <ImageView
                        android:id="@+id/ic_breif_case"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/breif_case" />

                    <TextView
                        android:id="@+id/tv_breif_case_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ic_breif_case"
                        android:fontFamily="@font/poppins_medium"
                        android:text="TN001-34"
                        android:textColor="@color/blackH"
                        android:textSize="@dimen/_12sdp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_breif_case_id"
                        android:layout_toRightOf="@id/ic_breif_case"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Black Creek Parkland"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/_7sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/poppins_regular"
                        android:text="With You"
                        android:textColor="@color/grey_text"
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@color/linecolor" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_skip_apple_tracking"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/drawable_scan_again"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Skip"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_next_apple_tracking"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:layout_toRightOf="@id/btn_skip_apple_tracking"
                        android:background="@drawable/drawable_signup_btn"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
