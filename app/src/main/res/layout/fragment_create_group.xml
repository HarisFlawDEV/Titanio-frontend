<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/grey">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_365sdp"
            android:background="@drawable/bg_login">


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_subscription_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Create Group"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_subscription_plan"
            android:layout_marginTop="@dimen/_18sdp"
            android:elevation="4dp"
            android:outlineSpotShadowColor="@color/black"
            app:cardCornerRadius="30dp"
            card_view:cardElevation="6dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Profile Progress"
                    android:textColor="@color/blackH"
                    android:textSize="@dimen/_13sdp" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/progress_bar_80" />


                <ImageView
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_width="270dp"
                    android:layout_height="270dp"
                    android:src="@drawable/ic_group" />

                <TextView
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="There is no group created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_skip_create_group"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/drawable_scan_again"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Skip"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_create_group"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:layout_toRightOf="@id/btn_skip_create_group"
                        android:background="@drawable/drawable_signup_btn"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Create Group"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                </RelativeLayout>


            </LinearLayout>



        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>
