<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rr_header"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/bg_login">

        <ImageView
            android:id="@+id/img_hamburger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_humberger" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Suit Case Details"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp" />

        <ImageView
            android:id="@+id/img_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:src="@drawable/ic_notifications" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/card_view_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:background="@drawable/drawbale_cardview_corner">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_18sdp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Brand"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="2dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp">

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_corner_grey_edit_text"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="text"
                        android:maxLength="50"
                        android:maxLines="1"
                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_12sdp"
                        android:text="Titanio"
                        android:textAllCaps="false"
                        android:textColor="#666666"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_11sdp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Invoice Date"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="2dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp">

                    <FrameLayout
                        android:id="@+id/frame_layout_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/round_corner_edit_text"
                            android:enabled="false"
                            android:inputType="number"
                            android:maxLength="50"
                            android:maxLines="1"
                            android:paddingStart="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_21sdp"
                            android:text="10-21-2021"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/img_eye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:clickable="true"
                            android:src="@drawable/ic_calender" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Warranty Valid"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="2dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp">

                    <FrameLayout
                        android:id="@+id/frame_layout_warranty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/et_warranty"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@drawable/round_corner_grey_edit_text"
                            android:enabled="false"
                            android:inputType="number"
                            android:maxLength="50"
                            android:maxLines="1"

                            android:paddingStart="@dimen/_12sdp"
                            android:paddingEnd="@dimen/_21sdp"
                            android:text="10-21-2031"
                            android:textAllCaps="false"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <ImageView
                            android:id="@+id/img_calenndar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_marginEnd="@dimen/_12sdp"
                            android:clickable="true"
                            android:src="@drawable/ic_calender" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Item  Number"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="2dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="4dp">


                    <EditText
                        android:id="@+id/et_item_number"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/round_corner_grey_edit_text"
                        android:inputType="text"
                        android:maxLength="50"
                        android:maxLines="1"

                        android:paddingStart="@dimen/_12sdp"
                        android:paddingEnd="@dimen/_21sdp"
                        android:text="TNO001-34"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_11sdp" />


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Add Suitcase Images"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:background="@drawable/ic_photo_selected" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/ic_photo_icon_with_shapes" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:src="@drawable/ic_photo_icon_with_shapes" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Upload Invoice"
                    android:textColor="@color/black"

                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:src="@drawable/ic_invoice_icon_with_shapes" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_confirm_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/drawable_signup_btn"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Confirm Detail"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_scan_again"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:layout_marginBottom="@dimen/_23sdp"

                    android:background="@drawable/drawable_scan_again"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Scan Again"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</RelativeLayout>

