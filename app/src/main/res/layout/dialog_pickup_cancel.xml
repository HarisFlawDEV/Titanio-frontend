<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/_12sdp"
    android:background="@null"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/drawable_round_dialog"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Are You Sure You Want\n       To Cancel Pickup?"
            android:textColor="#252525"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_no"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_19sdp"
                android:background="@drawable/drawable_signup_btn"
                android:fontFamily="@font/poppins_regular"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_6sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_yes"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_19sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:background="@drawable/drawable_my_pickup_red_btn"
                android:fontFamily="@font/poppins_regular"
                android:padding="@dimen/_5sdp"
                android:text="Yes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_6sdp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>