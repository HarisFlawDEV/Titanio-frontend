<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/grey">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_365sdp"
            android:background="@drawable/bg_login">


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_subscription_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_30sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Friends in Group"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp" />

        <LinearLayout
            android:id="@+id/cardViewLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_subscription_plan"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@drawable/drawbale_cardview_corner"
            >


            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp">



            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/ic_business_travel"
                android:layout_centerHorizontal="true"
                android:src="@drawable/business_travel"
                android:layout_width="212dp"
                android:layout_height="243dp"/>


                <RelativeLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_back_friends_in_group"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@drawable/drawable_scan_again"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Back"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_create_group"
                        android:layout_width="@dimen/_130sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_11sdp"
                        android:layout_toRightOf="@id/btn_back_friends_in_group"
                        android:background="@drawable/drawable_signup_btn"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Create Group"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />


                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>

